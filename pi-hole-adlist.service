[Unit]
Description=adlist directory download from firebog.net
Before=pi-hole-gravity.service

[Service]
Type=oneshot
ExecStart=/usr/bin/curl -fsS -o /etc/pihole/adlists.list "https://v.firebog.net/hosts/lists.php?type=tick"

[Install]
WantedBy=multi-user.target
